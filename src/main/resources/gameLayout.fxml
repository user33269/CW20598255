<Pane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.comp2042.GuiController">
   <HBox alignment="CENTER_RIGHT" layoutX="250.0" layoutY="10.0" prefHeight="30.0" prefWidth="120.0">
      <children>
         <Label fx:id="scoreLabel" text="Score:0" textFill="#fff8f8">
            <font>
               <Font name="Arial Black" size="18.0" />
            </font>
         </Label>
      </children>
   </HBox>
    <GridPane fx:id="brickPanel" hgap="1" prefHeight="514.0" prefWidth="348.0" vgap="1">
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints></GridPane>
    <BorderPane fx:id="gameBoard" layoutY="39.0" prefHeight="389.0" prefWidth="251.0" styleClass="gameBoard">
        <center>
            <GridPane fx:id="gamePanel" hgap="1.0" layoutX="40" layoutY="30" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="419.0" prefWidth="209.0" vgap="1.0" BorderPane.alignment="CENTER">
            <columnConstraints>
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
            </rowConstraints>
         </GridPane>
        </center>
    </BorderPane>

    <Group fx:id="groupNotification" layoutX="0" layoutY="203">
        <VBox alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel" scaleX="0.9" scaleY="0.9" />
        </VBox>
    </Group>
   <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" prefHeight="24.0" prefWidth="127.0" spacing="10.0">
      <children>
         <Button fx:id="restartButton" mnemonicParsing="false" onAction="#handleRestart" text="Restart" />
         <Button fx:id="exitButton" mnemonicParsing="false" onAction="#handleExit" prefHeight="29.0" prefWidth="54.0" text="Exit" />
      </children>
   </HBox>
    <stylesheets>
        <URL value="@window_style.css" />
    </stylesheets>
</Pane>
