<?xml version="1.0" encoding="UTF-8"?>

<?import com.comp2042.GameOverPanel?>
<?import java.net.URL?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.comp2042.GuiController">
    <GridPane fx:id="brickPanel" hgap="1" vgap="1" />
    <BorderPane fx:id="gameBoard" styleClass="gameBoard">
        <center>
            <GridPane fx:id="gamePanel" hgap="1" layoutX="40" layoutY="30" vgap="1" />
        </center>
    </BorderPane>

    <Group fx:id="groupNotification" layoutX="14" layoutY="203">
        <VBox alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel" />
        </VBox>
    </Group>
   <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" prefHeight="24.0" prefWidth="84.0" spacing="10.0">
      <children>
         <Button fx:id="restartButton" mnemonicParsing="false" onAction="#handleRestart" text="Restart" />
         <Button fx:id="exitButton" mnemonicParsing="false" onAction="#handleExit" prefHeight="29.0" prefWidth="54.0" text="Exit" />
      </children>
   </HBox>
    <stylesheets>
        <URL value="@window_style.css" />
    </stylesheets>
</Pane>
