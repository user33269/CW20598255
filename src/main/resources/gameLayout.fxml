               <Font name="Berlin Sans FB" size="18.0" />
            </font>
         </Label>
      </children>
   </HBox>
    <GridPane fx:id="brickPanel" hgap="1" layoutX="6.0" prefHeight="514.0" prefWidth="238.0" vgap="1">
