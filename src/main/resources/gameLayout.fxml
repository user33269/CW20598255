                  <padding>
                     <Insets right="45.0" top="33.0" />
                  </padding></StackPane>
            </children>
         </VBox>
      </children>
   </StackPane>

    <Group fx:id="groupNotification" layoutX="0" layoutY="203">
        <VBox alignment="CENTER">
