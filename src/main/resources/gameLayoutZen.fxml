<Pane prefHeight="460.0" prefWidth="736.0" stylesheets="@zenMode.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.comp2042.GuiControllerZen">
    <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="103.0" prefHeight="30.0" prefWidth="120.0"
          styleClass="rectangleBorder">
        <Label fx:id="scoreLabel" styleClass="scoreClass" text="Score:0"/>
    </HBox>
    <StackPane layoutX="310.0" layoutY="30.0">
        <BorderPane styleClass="gameBoard">
            <center>
                <GridPane fx:id="gamePanel" hgap="1.0" layoutX="300.0" layoutY="20.0" vgap="1.0"
                          BorderPane.alignment="TOP_LEFT">
                    <columnConstraints>
                        <ColumnConstraints/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints/>
                    </rowConstraints>
                </GridPane>
            </center>
        </BorderPane>
        <Pane fx:id="ghostPane" mouseTransparent="true" prefHeight="380.0" prefWidth="200.0"/>
    </StackPane>
    <GridPane fx:id="brickPanel" alignment="CENTER_RIGHT" hgap="1" layoutX="310.0" layoutY="30.0" vgap="1">
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
   </GridPane>
    <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" prefHeight="25.0" prefWidth="273.0" spacing="10.0">
        <Button mnemonicParsing="false" onAction="#handleRestart" prefHeight="25.0"
                prefWidth="60.0" text="Restart">
           <font>
               <Font name="Bodoni MT" size="12.0"/>
           </font>
        </Button>
        <Button mnemonicParsing="false" onAction="#handleExit" prefHeight="29.0" prefWidth="54.0"
                text="Exit">
           <font>
               <Font name="Bodoni MT" size="12.0"/>
           </font>
        </Button>
        <Button fx:id="pauseButton" mnemonicParsing="false" onAction="#pauseGame" prefHeight="25.0" prefWidth="61.0"
                text="Pause">
           <font>
               <Font name="Bodoni MT" size="12.0"/>
           </font>
        </Button>
        <Button mnemonicParsing="false" onAction="#returnHome" prefHeight="25.0" prefWidth="61.0" text="Home">
           <font>
               <Font name="Bodoni MT" size="12.0"/>
           </font>
        </Button>
    </HBox>
    <StackPane layoutX="630.0" layoutY="70.0" prefHeight="148.0" prefWidth="173.0" styleClass="ipad-dark-grey">
        <VBox alignment="CENTER" prefHeight="132.0" prefWidth="175.0">
            <Label alignment="CENTER" styleClass="holdBrickLabel" text="Hold" textFill="#efece2">
                <font>
                    <Font name="Bodoni MT" size="12.0"/>
                </font>
            </Label>
            <StackPane fx:id="holdPane" alignment="TOP_CENTER" prefHeight="150.0" prefWidth="200.0">
                <padding>
                    <Insets right="45.0" top="33.0"/>
                </padding>
            </StackPane>
        </VBox>
    </StackPane>
   <Pane fx:id="pauseOverlay" layoutX="-96.0" layoutY="-9.0" mouseTransparent="true" opacity="0.5" prefHeight="655.0" prefWidth="1214.0" style="-fx-background-color: black; visibility: false;" />
    <StackPane layoutX="630.0" layoutY="257.0" prefHeight="150.0" prefWidth="173.0" styleClass="ipad-dark-grey">
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
            <Label styleClass="nextBrickLabel" text="Next Brick" textFill="#efece2">
                <font>
                    <Font name="Bodoni MT" size="12.0"/>
                </font>
            </Label>
            <StackPane fx:id="nextBrickPane" alignment="TOP_CENTER" prefHeight="150.0" prefWidth="200.0">
                <padding>
                    <Insets right="45.0" top="33.0"/>
                </padding>
            </StackPane>
        </VBox>
    </StackPane>

          <Group fx:id="groupNotification" layoutY="203">
        <VBox alignment="CENTER" layoutX="318.0" layoutY="-30.0">
            <GameOverPanel fx:id="gameOverPanel" scaleX="0.9" scaleY="0.9" styleClass="gameOverStyle" />
        </VBox>
    </Group>
    <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="157.0" prefHeight="30.0" prefWidth="224.0"
          styleClass="rectangleBorder">
        <Label fx:id="highestScoreLabel" prefHeight="25.0" prefWidth="215.0" styleClass="scoreClass"
               text="HighestScore: 0"/>
    </HBox>
</Pane>
